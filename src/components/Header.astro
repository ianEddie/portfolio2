---
import Logo from '../icons/Logo.astro'

const HEADER = [
  {
    title: 'Sobre mi',
    href: '#description'
  },
  {
    title: 'Skills',
    href: '#skills'
  },
  {
    title: 'Proyectos',
    href: '#projects'
  },
  {
    title: 'Contacto',
    href: '#contact'
  }
]
---

<header
  id='header'
  class='py-2 sticky top-0 z-10 w-full flex justify-between items-center'
>
  <Logo />
  <nav class='flex items-center justify-center gap-10 pr-10 text-sm'>
    {HEADER.map(({ title, href }) => <a href={href}>{title}</a>)}
  </nav>
</header>
<style>
  nav {
    font-family: 'BrunoAce-Regular', sans-serif;
  }
</style>
