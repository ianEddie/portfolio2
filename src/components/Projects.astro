---
import { PROJECTS } from '@/lib/projects-data.astro'
import ProjectItem from './ProjectItem.astro'
import Section from '../ui/Section.astro'
import Title from '@/ui/Title.astro'
---

<Section
  id='projects'
  class='lg:px-0 px-5 relative gap-y-10 flex flex-col items-center'
>
  <Title>Proyectos</Title>
  <!-- Projects -->
  <div
    class='flex sm:flex-row flex-col w-full items-center justify-center sm:gap-x-20 gap-x-0 gap-y-10'
  >
    {PROJECTS.map((project) => <ProjectItem data={project} />)}
  </div>
  <a
    href='/proyectos'
    class='mt-2 flex items-center text-[1.02rem] gap-x-2 px-5 py-[8px] rounded-full shadow-lg bg-stone-900 shadow-indigo-950/30 border border-stone-700 font-medium text-neutral-300 hover:bg-neutral-100 hover:scale-105 hover:text-neutral-900 transition-all duration-300'
  >
    <span>Ver mas</span>
  </a>
</Section>
