---
import MarvelIcon from '../icons/MarvelIcon.astro'
import MarvelMockup from '../mockup/MarvelMockup.astro'
import NextIcon from '../icons/NextIcon.astro'
import ProjectItem from './ProjectItem.astro'
import Section from '../ui/Section.astro'
import TailwindIcon from '../icons/TailwindIcon.astro'
import FirebaseIcon from '../icons/FirebaseIcon.astro'
import AstroIcon from '../icons/AstroIcon.astro'
import JsIcon from '../icons/JsIcon.astro'
import DmrMockup from '../mockup/DmrMockup.astro'
import Button from '../ui/Button.astro'

const ICONS = {
  NEXT: {
    name: 'Next js',
    icon: NextIcon,
    style: 'text-neutral-900'
  },
  TAILWIND: {
    name: 'Tailwind css',
    icon: TailwindIcon,
    style: 'text-cyan-300'
  },
  FIREBASE: {
    name: 'Firebase',
    icon: FirebaseIcon,
    style: 'text-orange-300'
  },
  ASTRO: {
    name: 'Astro',
    icon: AstroIcon,
    style: 'text-orange-500'
  },
  JAVASCRIPT: {
    name: 'JavaScript',
    icon: JsIcon,
    style: 'text-yellow-400'
  }
}

const PROJECTS = [
  {
    id: '01',
    title: 'Marvel Comics',
    subtitle: 'E-commerce de comics',
    description:
      'Creado con Next js, utilizando Firabase para administrar una base de datos y el registro de usuarios. Los estilos de la web fueron realizados enteramente con Tailwind css',
    image: MarvelMockup,
    href: '#',
    tech: [ICONS.NEXT, ICONS.FIREBASE, ICONS.TAILWIND]
  },
  {
    id: '02',
    title: 'DMR',
    subtitle: 'Servicio de plomeria y gas',
    description:
      'Landing page hecha para una empresa especializada en servicios de plomer√≠a y gas. El sitio fue construido con Astro 3.0 y Vanilla JavaScript. El estilo de la web esta hecho enteramente con Tailwind css.',
    image: DmrMockup,
    href: '#',
    tech: [ICONS.ASTRO, ICONS.JAVASCRIPT, ICONS.TAILWIND]
  }
]
---

<Section id='projects' class='relative flex justify-center items-center'>
  <img
    src='https://i.postimg.cc/6Q5qhv1L/character-4.webp'
    alt='character image'
    class='lg:absolute lg:flex hidden left-10 h-1/3'
  />
  <article class='lg:w-1/2 mt-20 flex flex-col items-center'>
    <h1 class='text-5xl tracking-[3px]'>Proyectos</h1>
    <div
      class='w-full mt-14 flex flex-col items-center justify-center gap-y-10'
    >
      {PROJECTS.map((project) => <ProjectItem data={project} />)}
    </div>
    <Button class='mt-14 bg-stone-300 text-neutral-900'>Todos</Button>
  </article>
</Section>
<style>
  article {
    font-family: 'Outfit Variable', sans-serif;
  }
</style>
