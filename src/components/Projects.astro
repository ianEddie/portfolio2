---
import MarvelIcon from '../icons/MarvelIcon.astro'
import MarvelMockup from '../mockup/MarvelMockup.astro'
import NextIcon from '../icons/NextIcon.astro'
import ProjectItem from './ProjectItem.astro'
import Section from '../ui/Section.astro'
import TailwindIcon from '../icons/TailwindIcon.astro'
import FirebaseIcon from '../icons/FirebaseIcon.astro'
import AstroIcon from '../icons/AstroIcon.astro'
import JsIcon from '../icons/JsIcon.astro'

const ICONS = {
  NEXT: {
    name: 'Next js',
    icon: NextIcon,
    style: 'text-neutral-900'
  },
  TAILWIND: {
    name: 'Tailwind css',
    icon: TailwindIcon,
    style: 'text-cyan-300'
  },
  FIREBASE: {
    name: 'Firebase',
    icon: FirebaseIcon,
    style: 'text-orange-300'
  },
  ASTRO: {
    name: 'Astro',
    icon: AstroIcon,
    style: 'text-orange-500'
  },
  JAVASCRIPT: {
    name: 'JavaScript',
    icon: JsIcon,
    style: 'text-yellow-400'
  }
}

const PROJECTS = [
  {
    id: '01',
    title: 'Marvel Comics',
    subtitle: 'E-commerce de comics',
    description:
      'Creado con Next js, utilizando Firabase para crear una base de datos y administrar el registro de usuarios. Los estilos de la web fueron realizados enteramente con Tailwind css',
    icon: MarvelIcon,
    image: MarvelMockup,
    href: '#',
    tech: [ICONS.NEXT, ICONS.FIREBASE, ICONS.TAILWIND]
  },
  {
    id: '02',
    title: 'DMR',
    subtitle: 'Servicio de plomeria y gas',
    description:
      'Created from scratch with Next.js and Tailwind CSS. Its a library with SVG logos from the most popular brands. Optimized for SEO and performance.',
    icon: MarvelIcon,
    image: MarvelMockup,
    href: '#',
    tech: [ICONS.ASTRO, ICONS.JAVASCRIPT, ICONS.TAILWIND]
  }
]
---

<Section
  id='projects'
  class='min-h-[50vh] relative flex justify-center items-center'
>
  <img
    src='../../public/assets/characters/character-4.webp'
    alt='character image'
    class='absolute left-10 h-[40%]'
  />
  <article class='w-1/2 mt-20 flex flex-col items-center'>
    <h1 class='text-5xl tracking-[3px]'>Proyectos</h1>
    <div class='w-full mt-20 flex flex-col items-center justify-center gap-y-5'>
      {PROJECTS.map((project) => <ProjectItem data={project} />)}
    </div>
    <button
      class='bg-azul/50 0 mt-10 px-5 py-1 rounded-full shadow-xl shadow-indigo-800/80 text-lg'
      >Todos</button
    >
  </article>
</Section>
<style>
  article {
    font-family: 'Outfit Variable', sans-serif;
  }
</style>
