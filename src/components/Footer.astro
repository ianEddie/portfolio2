---
import LinkedinIcon from '../icons/LinkedinIcon.astro'
import MailIcon from '../icons/MailIcon.astro'
import Whatsapp from '../icons/Whatsapp.astro'
import Contact from './Contact.astro'
import Form from './Form.astro'
---

<footer id='contact' class='w-full flex flex-col items-center justify-center'>
  <h1 class='mt-20'>Contacto</h1>
  <Form />
  <nav class='flex m-10 gap-x-5'>
    <LinkedinIcon class='size-9 border-b pb-1 text-purple-200' />
    <MailIcon class='size-9 border-b pb-1 text-purple-200' />
    <Whatsapp class='size-9 border-b pb-1 text-purple-200' />
  </nav>
</footer>
<style>
 

  h1 {
    @apply text-4xl tracking-[5px] text-neutral-100;
  }
</style>
