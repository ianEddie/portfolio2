---
import Githubicon from '../icons/Githubicon.astro'
import WebIcon from '../icons/WebIcon.astro'

const { github, web } = Astro.props
---

<div class='flex items-center justify-around gap-x-5 font-medium'>
  <a
    href={web}
    target='_blank'
    class='text-zinc-300 flex items-center justify-center gap-x-1 px-3 py-1 rounded-full bg-zinc-900/70 shadow-lg shadow-indigo-900'
  >
    <WebIcon class='size-7 text-blue-500' />
    Visitar
  </a>
  <a
    href={github}
    target='_blank'
    class='text-zinc-300 flex items-center justify-center gap-x-1 px-3 py-1 rounded-full bg-zinc-900/70 shadow-md shadow-indigo-900'
  >
    <Githubicon class='size-7 text-violet-500' />
    Repositorio
  </a>
</div>
