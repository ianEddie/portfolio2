---
import SocialPill from './SocialPill.astro'
import { DATA } from '@/lib/contact-data.astro'
---

<nav {...Astro.props}>
  {
    DATA.map((item) => (
      <div class='group '>
        <SocialPill href={item.href} class='transition-all duration-300'>
          <item.icon class={`${item.iconColor} ${item.iconColorHover} icon`} />
          <span class='group-hover:text-neutral-900 font-semibold'>
            {item.name}
          </span>
        </SocialPill>
      </div>
    ))
  }
</nav>
<style>
  footer {
    font-family: 'Montserrat', sans-serif;
  }
  .icon,
  span {
    @apply transition-all duration-500 ease-in-out;
  }
</style>
